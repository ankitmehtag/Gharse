<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:elevation="5sp"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="5sp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_margin="10sp"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:numberpicker="http://schemas.android.com/tools">
    <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                        app:cardBackgroundColor="#fff"
                        android:elevation="5sp"
                        app:cardElevation="5sp"
                        app:cardCornerRadius="4dp"
                        android:layout_width="70sp"
                        android:layout_height="60sp">
                    <ImageView
                            android:src="@mipmap/ic_launcher_final_round"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:text="Chicken Nugget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="$5.18"
                        android:textColor="#ff2424"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Quantity :"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <com.travijuu.numberpicker.library.NumberPicker
                            android:id="@+id/number_picker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            numberpicker:min="0"
                            numberpicker:max="10"
                            numberpicker:value="-5"
                            numberpicker:unit="1"
                            android:layout_gravity="center"
                            numberpicker:focusable="false"
                            numberpicker:custom_layout="@layout/number_picker_custom_layout" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="10:45 PM"
                        android:textAlignment="textEnd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                <TextView
                        android:text="To : "
                        android:gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                <TextView
                        android:textColor="#000"
                        android:textStyle="normal"
                        android:gravity="bottom"
                        android:text="Sumit Negi"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <Button
                    android:textColor="#000"
                    android:text="Parcel"
                    android:background="@drawable/btn_back_pacel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>