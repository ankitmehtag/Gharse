                    <TextView
                            android:id="@+id/sat_from_txt"
                            android:layout_margin="1sp"
                            android:textSize="15sp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <Button
                            android:id="@+id/sat_to"
                            android:layout_margin="5sp"
                            android:background="@drawable/btn_selector"
                            android:text="To"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/sat_to_txt"
                            android:layout_margin="1sp"
                            android:textSize="15sp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_margin="5sp"
                        android:textSize="20sp"
                        android:text="Sun :"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <Button
                            android:id="@+id/sun_from"
                            android:layout_margin="5sp"
                            android:background="@drawable/btn_selector"
                            android:text="From"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/sun_from_txt"
                            android:layout_margin="1sp"
                            android:textSize="15sp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <Button
                            android:id="@+id/sun_to"
                            android:layout_margin="5sp"
                            android:background="@drawable/btn_selector"
                            android:text="To"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/sun_to_txt"
                            android:layout_margin="1sp"
                            android:textSize="15sp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                    android:padding="10sp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatButton
                        android:text="Submit"
                        android:id="@+id/update_week"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="#ff350d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>