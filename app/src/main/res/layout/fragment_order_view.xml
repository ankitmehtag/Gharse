<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:numberpicker="http://schemas.android.com/tools">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textAlignment="textEnd"
                    android:text=" Order ID :  "
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>


            <TextView
                    android:textSize="22sp"
                    android:padding="10sp"
                    android:layout_marginStart="15sp"
                    android:layout_marginLeft="15sp"
                    android:layout_weight="1"
                    android:id="@+id/order_ID"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
                android:background="#5d000000"
                android:layout_marginBottom="25sp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:textAlignment="textStart"
                    android:text=" Total Price           :  "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:layout_marginRight="15sp"
                    android:layout_marginEnd="15sp"
                    android:layout_marginStart="15sp"
                    android:layout_marginLeft="15sp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_gravity="center"
                        android:text="@string/Rs"
                        android:textSize="18sp"
                        android:textColor="#ff2f00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textColor="#ff2f00"
                        android:id="@+id/price_total"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:textAlignment="textStart"
                        android:text=" Quantity                :  "
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <TextView
                    android:layout_marginStart="15sp"
                    android:layout_marginLeft="15sp"
                    android:textColor="#ff2f00"
                    android:id="@+id/quantity_order"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:textAlignment="textStart"
                        android:text=" Order Time           :  "
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <TextView
                    android:layout_marginStart="15sp"
                    android:layout_marginLeft="15sp"
                    android:textColor="#ff2f00"
                    android:id="@+id/order_time"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:textAlignment="textStart"
                        android:text=" Delivery Address :  "
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <TextView
                    android:layout_marginStart="15sp"
                    android:layout_marginLeft="15sp"
                    android:textColor="#ff2f00"
                    android:id="@+id/deliveryAdd"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:textAlignment="textStart"
                        android:text=" Contact Number :  "
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <TextView
                    android:layout_marginStart="15sp"
                    android:layout_marginLeft="15sp"
                    android:textColor="#ff2f00"
                    android:id="@+id/contact_numb"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:textAlignment="textStart"
                        android:text=" Payment Method :  "
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <TextView
                    android:layout_marginStart="15sp"
                    android:layout_marginLeft="15sp"
                    android:textColor="#ff2f00"
                    android:id="@+id/payMode"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:textAlignment="textStart"
                        android:text=" Payment Status   :  "
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <TextView
                    android:layout_marginStart="15sp"
                    android:layout_marginLeft="15sp"
                    android:textColor="#ff2f00"
                    android:text=""
                    android:id="@+id/pay_status"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <include layout="@layout/progress_bar"
                 android:layout_marginTop="20sp"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_gravity="center"/>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/order_listing_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
