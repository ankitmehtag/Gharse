<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:elevation="5sp"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="5sp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_margin="10sp"
        android:layout_height="170dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:numberpicker="http://schemas.android.com/tools">
    <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                        app:cardBackgroundColor="#fff"
                        android:elevation="5sp"
                        app:cardElevation="5sp"
                        app:cardCornerRadius="4dp"
                        android:layout_width="150dp"
                        android:layout_height="150sp">
                    <ImageView
                            android:id="@+id/Recipeimg"
                            android:src="@mipmap/ic_launcher_final_round"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginStart="4sp"
                    android:layout_marginLeft="4sp"
                    android:layout_marginTop="8sp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:id="@+id/Recipename"
                        android:layout_marginLeft="16sp"
                        android:layout_marginStart="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:layout_marginLeft="16sp"
                        android:layout_marginStart="16sp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="Time:"
                                android:textAlignment="center"
                                android:textColor="#ff2424"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        <LinearLayout
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:id="@+id/from_tim"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:text="-"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:id="@+id/to_tim"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                            android:id="@+id/RecipeTyp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_weight="1"
                            android:text="Quantity   :"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/quantit"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        <TextView
                                android:layout_marginStart="10sp"
                                android:layout_marginLeft="10sp"
                                android:layout_gravity="center"
                                android:text="@string/Rs"
                                android:textSize="24sp"
                                android:textColor="#ff2f00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        <TextView
                                android:id="@+id/sub_total_cart"
                                android:layout_gravity="center"
                                android:textSize="16sp"
                                android:textColor="#0396ff"
                                android:layout_marginEnd="1sp"
                                android:layout_marginRight="1sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        <Button
                                android:textColor="#fff"
                                android:id="@+id/delete_btn"
                                android:layout_margin="2sp"
                                android:text="Delete"
                                android:textSize="14sp"
                                android:background="@drawable/btn_selector"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
