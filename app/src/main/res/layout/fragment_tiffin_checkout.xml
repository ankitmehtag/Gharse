<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
            android:layout_marginTop="16sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:text="Tiffin Checkout"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textStyle="bold" />
        <!-- Name Label -->
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

            <EditText
                    android:id="@+id/input_user_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DeliveryAddress"
                    android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/payment_mode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Payment Mode"
                app:met_floatingLabel="normal"
                android:textColorHint="#CFD8DC"/>

        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

            <EditText
                    android:id="@+id/contact_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ContactNumber"
                    android:maxLength="10"
                    android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <EditText
                android:id="@+id/tiffin_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tiffin Start Date"
                android:maxLength="10"
                android:inputType="number" />
        <TextView
                android:id="@+id/tiffin_end"
                android:layout_margin="5sp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tiffin End Date"
                android:maxLength="10"
                android:inputType="number" />

        <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_tfn_checkout"
                android:background="@color/colorPrimary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:padding="12dp"
                android:text="CHECKOUT" />
    </LinearLayout>
</ScrollView>